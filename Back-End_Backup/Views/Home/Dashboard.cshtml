@model IEnumerable<BadgeSpace.Models.StudentModel>
@{
    ViewData["Title"] = "Dashboard";
}
<div>
    <h4>Dashboard</h4>
    <hr />
    <dl class="row">
        <dt>Badges</dt>
        <dd class="col-sm-10">
            @foreach (var item in Model)
                {
                    if (item.AlunoCPF == ViewBag.CPF)
                    {
                        if (item.Imagem != null)
                        {
                            var base64 = Convert.ToBase64String(item.Imagem);
                            var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                            <img src='@imgSrc' style="max-width:100px; max-height:100px;" />
                        }
                        <h5>@item.NomeAluno</h5>
                        <h5>@item.Curso</h5>
                        <h5>@item.Tipo</h5>
                        <h5>@item.Descricao</h5>
                        <h5>@item.Tempo</h5>
                        <h5>@item.Nivel</h5>
                        <h5>@item.Habilidades</h5>
                    }
                }
        </dd>
    </dl>
</div>
